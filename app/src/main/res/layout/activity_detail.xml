<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:fontFamily="@font/barlowcondensed_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISCOVER"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28dp"/>


            <ImageView
                android:layout_marginTop="-26dp"
                android:layout_marginLeft="-170dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                />

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#A6A1A1"/>


            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="25dp"
                android:id="@+id/tile_detail_newfeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="#252525"
                android:textSize="24dp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:fontFamily="@font/roboto_lightItalic"
                android:id="@+id/tile_contentTitle_newfeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="chung"
                android:textColor="#534848"
                android:textSize="20dp"

                />
            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question"
                />

            <TextView
                android:textSize="18dp"
                android:fontFamily="@font/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="chung"
                />

            <ListView
                android:id="@+id/imgDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>