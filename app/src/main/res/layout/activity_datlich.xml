<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DatlichActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_marginLeft="-70dp"
            android:id="@+id/btnhomeDatLich"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:src="@drawable/home1" />

        <TextView
            android:fontFamily="@font/robotomedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:text="ĐẶT LỊCH GIỮ CHỖ"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    <!--    -->
    <ScrollView
        android:id="@+id/scrollview_Datlich"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="24dp"
                android:fontFamily="@font/robotocondensed_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="1.Chọn Dịch Vụ"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="24dp"
                android:background="@drawable/cardview_shadow"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="#D4F2F4"
                app:cardCornerRadius="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="14dp"
                    android:layout_width="56.23dp"
                    android:layout_height="57.81dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="#D4F2F4"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_marginLeft="-20dp"
                        android:layout_marginTop="-12dp"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tuvan"
                        app:shapeAppearanceOverlay="@style/cilcle" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="15sp"
                    android:text=" Lâu rồi không thấy anh ghé chúng em,\n anh chọn dịch vụ mà mình cần ở phía\n dưới nhé ! " />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/datlich_crv_chondichvu"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#F1F0F0"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/content_cut" />


                <TextView
                    android:background="#F1F0F0"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_datlich_service"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:drawSelectorOnTop="true"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


            </androidx.cardview.widget.CardView>

            <!--     CHON STYLIST           -->

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/robotocondensed_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.Chọn Stylist"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <androidx.cardview.widget.CardView
                android:layout_marginTop="24dp"
                android:id="@+id/crv_selectstylish"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_height="49dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F1F0F0"
                app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/iconprofile" />

                <Spinner
                    android:id="@+id/spinerstylish"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginLeft="50dp"
                    android:drawSelectorOnTop="true"
                    android:background="#F1F0F0"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_stylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />


            <!--     CHON NGAY VA GIO            -->



            <TextView
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/robotocondensed_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="3.Chọn ngày, giờ"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="#F1F0F0"
                app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calenda"
                        android:id="@+id/btn_datlich_calendar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_datlich_time"
                        android:hint="Chọn ngày sử dụng dịch vụ"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="14dp"
                        android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_btnTime"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="30dp" />


            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:layout_width="369dp"
                android:layout_height="49dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#939292">

                <Button
                    android:id="@+id/btn_order_hoantat"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textStyle="bold"
                    android:text="Hoàn Tất"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotomedium"
                    android:backgroundTint="#939292"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cắt xog trả tiền, hủy lịch không sao"
                android:textSize="14dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>