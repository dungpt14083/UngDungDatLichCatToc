<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@color/white"

        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8.9"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_Topservice_img"
                android:layout_width="fill_parent"
                android:layout_height="128dp"
                android:src="@drawable/logo2"
                android:layout_marginTop="-10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="-12dp"
                android:background="#262626"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_Topservice_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Gội Đầu"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/bevietnampro_light"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_Topservice_tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="tóc đẹp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:background="#262626"
                android:layout_weight="1.1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_topservice_tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="100k"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#E9D462"
                    android:textSize="12sp" />


            </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt Ngay"
            android:backgroundTint="#FFCA39"
            android:id="@+id/btn_topservice_datngay"
            />

    </LinearLayout>

</LinearLayout>