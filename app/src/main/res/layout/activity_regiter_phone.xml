<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.RegiterPhoneActivity">
    <ImageView
        android:id="@+id/Img_regerterphone_homback"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vt_back"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào bạn "
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="28dp"
        android:textStyle="bold"
        android:fontFamily="@font/robotomedium"
        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí thành viên của Hair Salon "
            android:textSize="17dp"
            android:textColor="#404040"
            android:fontFamily="@font/robotomedium"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="để nhận nhiều ưu đãi hơn  "
            android:textSize="17dp"
            android:textColor="#404040"
            android:fontFamily="@font/robotomedium"

            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="27dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_vt_phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/robotomedium"
                android:textStyle="bold"
                android:text="84+"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:inputType="number"
                android:id="@+id/edt_regiterphone_sdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:hint="nhập số điện thoại "
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginLeft="28dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radiodieukhoan"
            android:layout_width="26dp"
            android:layout_height="26dp"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng ý với "
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điều Khoản &amp; Dịch vụ  "
            android:textColor="#F60303"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_regiterphone_continue"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/robotomedium"
        android:textColor="#ffff"
        android:background="@drawable/my_corner_button"
        />

</LinearLayout>