<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout

        android:background="#666666"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/thuy"
                    android:id="@+id/home_img_avt_user" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginRight="5dp"
                android:textSize="19dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAM PHƯƠNG BÙI"
                android:textColor="@color/white"
                android:id="@+id/home_tv_name_user"/>
            <TextView
                android:textSize="25dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐĂNG KÝ NGAY"
                android:textColor="@color/black"
                android:id="@+id/home_tv_Dangky_user"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_img_btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/iconslacklogo_" />
        </LinearLayout>
    </LinearLayout>

<ScrollView
    android:layout_weight="2"
    android:fillViewport="true"
    android:id="@+id/scrollview_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="3500dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_cardview_datlich"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="10dp"
                            android:backgroundTint="#BCB2B2"
                            app:cardCornerRadius="250dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/calenda" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:text="Đặt lịch" />
                    </LinearLayout>

<LinearLayout
    android:layout_width="110dp"
    android:layout_height="150dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/home_cardview_lichsucut"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:backgroundTint="#BCB2B2"
        app:cardCornerRadius="250dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/history" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Lịch sử cắt" />
</LinearLayout>
                  <LinearLayout
                      android:layout_width="110dp"
                      android:layout_height="150dp"
                      android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_cardview_banggia"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="#BCB2B2"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="250dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/calenda" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                      <TextView

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="10dp"
                          android:textSize="20dp"
                          android:textColor="@color/black"
                          android:text="Bảng Giá" />
                  </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_margin="10dp"

                app:cardBackgroundColor="#D9D9D9"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:src="@drawable/thuy" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="Mời anh đánh giá chất lượng dịch vụ"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phản hồi của anh sẽ giúp chúng em cải thiện chất lượng dịch vụ"
                                android:textColor="@color/black"
                                android:textSize="13dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/home_rattingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:numStars="5"
                        android:rating="4"
                        android:theme="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="30dp"
                android:text="Trải Nghiệm dịch vụ"
                android:textColor="@color/black"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/home_rcv_dichvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>


</LinearLayout>