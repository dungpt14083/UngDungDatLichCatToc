<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout

        android:background="#CFD14E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/thuy"
                    android:id="@+id/home_img_avt_user" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginRight="5dp"
                android:textSize="19dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAM PHƯƠNG BÙI"
                android:textColor="@color/white"
                android:id="@+id/home_tv_name_user"/>
            <TextView
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐĂNG KÝ NGAY"
                android:textColor="@color/black"
                android:id="@+id/home_tv_Dangky_user"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginLeft="20dp"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/ic_setting"
                android:layout_gravity="center"
                android:id="@+id/home_img_btn_setting"/>
            <ImageButton
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/ic_thongbao"
                android:layout_gravity="center"
                android:id="@+id/home_img_btn_thongbao"/>
        </LinearLayout>
    </LinearLayout>
<ScrollView
    android:id="@+id/scrollview_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="50dp"
                        android:layout_margin="10dp"
                        android:id="@+id/home_cardview_datlich"
                        android:layout_width="100dp"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"/>
                            <TextView

                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đặt lịch"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:id="@+id/home_cardview_lichsucut"
                        android:layout_width="100dp"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"/>
                            <TextView

                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lịch sử cắt"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:id="@+id/home_cardview_banggia"
                        android:layout_width="100dp"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"/>
                            <TextView

                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bảng Giá"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/home_cardview_uudai"
                        android:layout_width="100dp"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"/>
                            <TextView

                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ưu Đãi"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:id="@+id/home_cardview_hethongsalon"
                        android:layout_width="100dp"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"/>
                            <TextView

                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hệ Thống Salon"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:id="@+id/home_cardview_sothich"
                        android:layout_width="100dp"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"/>
                            <TextView

                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sở Thích"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="#D9D9D9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_margin="20dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/thuy"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:text="Mời anh đánh giá chất lượng dịch vụ"/>
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:textColor="@color/black"
                                android:text="Phản hồi của anh sẽ giúp chúng em cải thiện chất lượng dịch vụ"/>
                        </LinearLayout>


                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/home_rattingbar"
                        android:theme="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="4"
                        android:numStars="5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Trải Nghiệm dịch vụ"
                android:textColor="@color/black"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_rcv_dichvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Cam Kết Studio Salon"
                android:textColor="@color/black"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_margin="10dp"
                                android:layout_width="110dp"
                                android:layout_height="100dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageButton
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_calender"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_marginTop="10dp"
                                            android:textSize="15dp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="7 ngày"/>
                                        <TextView
                                            android:layout_gravity="left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="chỉnh sửa tóc miễn phí"/>
                                    </LinearLayout>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_margin="10dp"
                                android:layout_width="110dp"
                                android:layout_height="100dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageButton
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_calender"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_marginTop="10dp"
                                            android:textSize="15dp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="30 ngày"/>
                                        <TextView
                                            android:layout_gravity="left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Tư vấn chăm sóc khách hàng"/>
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_margin="10dp"
                                    android:layout_width="110dp"
                                    android:layout_height="100dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">
                                        <ImageButton
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_calender"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_marginTop="10dp"
                                                android:textSize="15dp"
                                                android:textColor="@color/black"
                                                android:layout_gravity="left"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="15 ngày"/>
                                            <TextView
                                                android:layout_gravity="left"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Bảo hành uốn nhuộm"/>
                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_margin="10dp"
                                    android:layout_width="110dp"
                                    android:layout_height="100dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageButton
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_calender"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_marginTop="10dp"
                                            android:textSize="15dp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Giảm 25%"/>
                                        <TextView
                                            android:layout_gravity="left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Nếu chờ đợi quá lâu"/>
                                    </LinearLayout>

                                </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>


</LinearLayout>