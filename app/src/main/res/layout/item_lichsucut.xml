<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_lichsu_lichsucut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
    android:layout_margin="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--            <ImageView-->
<!--                android:id="@+id/img_lichsu_avatar"-->
<!--                android:layout_margin="10dp"-->
<!--                android:layout_width="149dp"-->
<!--                android:layout_height="149dp"-->
<!--                android:src="@drawable/thuy"/>-->
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="18dp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_lichsu_diachi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bùi Phương Nam "
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_lichsu_thoigian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09/10/2022 15:54"
                       />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16dp"
                        android:fontFamily="@font/robotolight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stylist"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LÊ TÙNG VÂN"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/tv_lichsu_namestylist"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:fontFamily="@font/robotolight"
                        android:text="Skinner"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGUYỄN THỊ NGA"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/tv_lichsu_nameskinner"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16dp"
                        android:fontFamily="@font/robotolight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dịch vu:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMBO CẮT UỐN NHUỘM CAO CẤP"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/tv_lichsu_namedichvu"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/btn_lichsu_xemchitiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtxemchitiet"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            />
<!--        <Button-->

<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:backgroundTint="#FFC107"-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold"-->
<!--            android:text="XEM CHI TIẾT"/>-->
    </LinearLayout>

    </androidx.cardview.widget.CardView>
