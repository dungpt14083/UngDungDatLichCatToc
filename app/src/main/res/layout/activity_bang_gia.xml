<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BangGiaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        >
        <ImageView
            android:id="@+id/btnhomeBangGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_vt_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/bevietnampro_regular"
            android:text="Bảng giá"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:numColumns="2"
            android:layout_weight="10"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:verticalSpacing="10dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/banggia_gridview"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_corner_button_gray"
            android:text="Đặt Lịch Ngay"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/barlowcondensedsemibold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/banggia_btn_datlich"/>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>