<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"

   >
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:backgroundTint="#FFCA39"
        android:background="@drawable/custom_border_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="8.9"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/item_topstylish_imgavatar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="-7dp"
                    android:src="@drawable/tocnamdep" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_topstylish_tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/robotomedium"
                android:text=" "
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_topstylish_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/robotoregular"
                android:text=" "
                android:textColor="#757575"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>
