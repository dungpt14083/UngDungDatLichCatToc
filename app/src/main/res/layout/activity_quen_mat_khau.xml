<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.QuenMatKhauActivity">
    <ImageView
        android:id="@+id/Img_regerterphone_homback"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vt_back"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào bạn "
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="28dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/robotomedium"
        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào Mừng Bạn Tới Hair Salon "
            android:textSize="17dp"
            android:textColor="#404040"
            android:fontFamily="@font/robotomedium"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy Nhập Số Điện Thoại Của Bạn"
            android:textSize="17dp"
            android:textColor="#404040"
            android:fontFamily="@font/robotomedium"

            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="27dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_vt_phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="84+"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:inputType="number"
                android:id="@+id/edt_fogot_sdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="nhập số điện thoại "
                android:textSize="20sp"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fogot_continue"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:textAllCaps="false"
        android:text="Tiếp tục  "
        android:textSize="18dp"
        android:fontFamily="@font/robotomedium"
        android:textColor="#ffff"
        android:background="@drawable/my_corner_button"
        />
</LinearLayout>