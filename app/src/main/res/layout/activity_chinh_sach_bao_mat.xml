<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChinhSachBaoMat"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chính Sách Bảo Mật Thông Tin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"/>


    <ImageView
        android:fontFamily="@font/robotoregular"
        android:layout_marginTop="-24dp"
        android:layout_marginLeft="-170dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back"
        />

    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chính Sách Bảo Mật Thông Tin App Hair Salon"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"/>

    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-50dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Mục đích và phạm vi thu thập thông tin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* HairSalon thu thập thông tin người dùng qua việc khách hàng đặt lịch cắt tóc, đặt mua hàng trên App HairSalon.\n * Các thông tin của khách hàng mà HairSalon thu thập là: Họ tên, Số điện thoại, Email , Địa chỉ nhận hàng \n
* Mục đích sử dụng thông tin: \n -Xác nhận danh tính khách hàng \n - Xác nhận lịch cắt tóc cho khách hàng \n - Nâng cao chất lượng dịch vụ chăm sóc khách hàng, liên \n lạc giải quyết vấn đề khi khách hàng có trải nghiệm chưa \n tốt, gửi tới khách hàng thông tin về các chương trình \n khuyến mãi mà khách hàng quan tâm."
        android:textColor="@color/black"
        android:textSize="14dp"/>


    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginLeft="-22dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Phạm vi sử dụng thông tin và bảo mật thông tin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Thông tin các  hân thu thập được sẽ cjir được sử dụng \n
trong nội bộ công ty nhằm mục đích: xác nhân lịch cắt tóc \n
cho khách hàng, xác nhân đơn đặt hàng, theo dõi đơn đặt \n
hàng, chăm sóc khách hàng\n
* HairSalon không cung cấp cho bất cứ bên thứ 3 nào các \n
thông tin của khách hàng(trừ trường hợp được khách hàng \n
đồng ý )"
        android:textColor="@color/black"
        android:textSize="14dp"/>



    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginLeft="6dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Thông tin đơn vị thu thập và quản lý thông tin khách hàng"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cửa hàng HairSalon \n
Địa chỉ: số 25 Hồ Tùng Mậu, Q. Nam Từ Liêm, Hà Nội
"
        android:textColor="@color/black"
        android:textSize="14dp"/>



    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginLeft="6dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Phương tiện và công cụ người để người dùng tiếp cận và chỉnh sửa dữ liệu cá nhân của mình"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:fontFamily="@font/robotoregular"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng muốn thay đổi thông tin cá nhân của mình xin \n
vui lòng liên hệ tới Hotline: 19008089
"
        android:textColor="@color/black"
        android:textSize="14dp"/>

</LinearLayout>