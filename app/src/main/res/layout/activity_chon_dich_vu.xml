<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.BanGiaActivity">

    <androidx.cardview.widget.CardView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#D8F4E8"
        app:cardCornerRadius="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Hãy để Salon phục vụ anh với những thứ tốt nhất "
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
<GridView
    android:horizontalSpacing="10dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8.5"
    android:numColumns="2"
    android:verticalSpacing="10dp"
    android:layout_marginHorizontal="5dp"
    android:id="@+id/chondichvu_gridview"/>


        <com.google.android.material.button.MaterialButton
            android:layout_width="350.95dp"
            android:layout_height="49dp"
            android:text="Chọn Dịch Vụ"
            android:textSize="24dp"
            android:fontFamily="@font/roboto"

            android:layout_gravity="center|bottom"
            app:cornerRadius="10dp"
            app:backgroundTint="#E5E5E5"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:id="@+id/chondichvu_btn_chondichvu"/>
</androidx.appcompat.widget.LinearLayoutCompat>