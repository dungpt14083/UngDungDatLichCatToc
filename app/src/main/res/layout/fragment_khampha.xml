<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F6F6"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginTop="44dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="20dp"
                android:layout_width="116dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:text="Discover"
                android:fontFamily="@font/robotoregular"
                android:backgroundTint="#000"
                android:id="@+id/khampha_btn_discover"/>
            <com.google.android.material.button.MaterialButton

                app:cornerRadius="20dp"
                android:layout_width="116dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:text="StyleMaster"
                android:backgroundTint="#000"
                android:id="@+id/khampha_btn_stylemaster"/>
            <com.google.android.material.button.MaterialButton

                app:cornerRadius="20dp"
                android:layout_width="116dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:text="Lookbook"
                android:backgroundTint="#000"
                android:id="@+id/khampha_btn_lookbook"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:fontFamily="@font/barlowcondensedregular"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cùng 30 SHINE khám phá "
        />
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="12dp"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Xu hướng tóc hót nhất "
        android:fontFamily="@font/barlowcondensedregular"
        android:textStyle="bold"
        />
    <GridView
        android:horizontalSpacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/khampha_grid"/>
</LinearLayout>