<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F8"
    tools:context=".activity.UpdateAccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_update_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_vt_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="30dp"
            android:layout_marginTop="8dp"
            android:text="Chỉnh sửa thông tin"
            android:textColor="#000000"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_medium" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:background="@drawable/custom_gradient"
                android:gravity="center_horizontal"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="-95dp"
                android:background="@color/white"
                android:id="@+id/img_update_avt"
                android:src="@drawable/ic_logo"
                app:shapeAppearanceOverlay="@style/cilcle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Họ và tên"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_update_account_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Nhập họ tên " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Ngày sinh "
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_update_account_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="6dp"
                        android:hint="Nhập ngày sinh" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/black"
                        android:text="Địa chỉ"
                        android:textSize="18dp"
                        android:fontFamily="@font/roboto_medium"/>

                    <EditText
                        android:id="@+id/edt_update_account_Adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Nhập địa chỉ  " />
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvLuuthongtin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/my_corner_button"
                android:fontFamily="@font/roboto_medium"
                android:text="Cập nhật"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>